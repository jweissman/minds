- model_class = TrainingDatum
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:mind_id)
      %th= model_class.human_attribute_name(:input)
      %th= model_class.human_attribute_name(:expected_output)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @training_data.each do |training_datum|
      %tr
        %td= link_to training_datum.id, training_datum_path(training_datum)
        %td= training_datum.name
        %td= training_datum.description
        %td= training_datum.mind_id
        %td= training_datum.input
        %td= training_datum.expected_output
        %td=l training_datum.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_training_datum_path(training_datum), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), training_datum_path(training_datum), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_training_datum_path, :class => 'btn btn-primary'
