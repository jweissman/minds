= form_for @training_datum, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :mind_id, :class => 'control-label'
    .controls
      = f.number_field :mind_id, :class => 'number_field'
  .control-group
    = f.label :input, :class => 'control-label'
    .controls
      = f.text_area :input, :class => 'text_area'
  .control-group
    = f.label :expected_output, :class => 'control-label'
    .controls
      = f.text_area :expected_output, :class => 'text_area'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), training_data_path, :class => 'btn'
