- model_class = TrainingDatum
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @training_datum.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @training_datum.description
%p
  %strong= model_class.human_attribute_name(:mind_id) + ':'
  %br
  = @training_datum.mind_id
%p
  %strong= model_class.human_attribute_name(:input) + ':'
  %br
  = @training_datum.input
%p
  %strong= model_class.human_attribute_name(:expected_output) + ':'
  %br
  = @training_datum.expected_output

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), training_data_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_training_datum_path(@training_datum), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), training_datum_path(@training_datum), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
