- model_class = HiddenNeuronLayer
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:neuron_count) + ':'
  %br
  = @hidden_neuron_layer.neuron_count
%p
  %strong= model_class.human_attribute_name(:mind_id) + ':'
  %br
  = @hidden_neuron_layer.mind_id
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @hidden_neuron_layer.position

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), hidden_neuron_layers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_hidden_neuron_layer_path(@hidden_neuron_layer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), hidden_neuron_layer_path(@hidden_neuron_layer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
