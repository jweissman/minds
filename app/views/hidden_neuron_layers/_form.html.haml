= form_for @hidden_neuron_layer, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :neuron_count, :class => 'control-label'
    .controls
      = f.number_field :neuron_count, :class => 'number_field'
  .control-group
    = f.label :mind_id, :class => 'control-label'
    .controls
      = f.number_field :mind_id, :class => 'number_field'
  .control-group
    = f.label :position, :class => 'control-label'
    .controls
      = f.number_field :position, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), hidden_neuron_layers_path, :class => 'btn'
