- model_class = HiddenNeuronLayer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:neuron_count)
      %th= model_class.human_attribute_name(:mind_id)
      %th= model_class.human_attribute_name(:position)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @hidden_neuron_layers.each do |hidden_neuron_layer|
      %tr
        %td= link_to hidden_neuron_layer.id, hidden_neuron_layer_path(hidden_neuron_layer)
        %td= hidden_neuron_layer.neuron_count
        %td= hidden_neuron_layer.mind_id
        %td= hidden_neuron_layer.position
        %td=l hidden_neuron_layer.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_hidden_neuron_layer_path(hidden_neuron_layer), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), hidden_neuron_layer_path(hidden_neuron_layer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_hidden_neuron_layer_path, :class => 'btn btn-primary'
