= form_for @analysis, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :inputs, :class => 'control-label'
    .controls
      = f.text_area :inputs, :class => 'text_area'
  .control-group
    = f.label :output, :class => 'control-label'
    .controls
      = f.text_area :output, :class => 'text_area'
  .control-group
    = f.label :mind_id, :class => 'control-label'
    .controls
      = f.number_field :mind_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), analyses_path, :class => 'btn'
