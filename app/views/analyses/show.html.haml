- model_class = Analysis
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:inputs) + ':'
  %br
  = @analysis.inputs
%p
  %strong= model_class.human_attribute_name(:output) + ':'
  %br
  = @analysis.output
%p
  %strong= model_class.human_attribute_name(:mind_id) + ':'
  %br
  = @analysis.mind_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), analyses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_analysis_path(@analysis), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), analysis_path(@analysis), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
