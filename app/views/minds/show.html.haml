- model_class = Mind
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @mind.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @mind.description
%p
  %strong= model_class.human_attribute_name(:input_arity) + ':'
  %br
  = @mind.input_arity
%p
  %strong= model_class.human_attribute_name(:output_arity) + ':'
  %br
  = @mind.output_arity

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), minds_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_mind_path(@mind), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), mind_path(@mind), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
